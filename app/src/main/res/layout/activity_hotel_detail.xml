<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollView2"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".activity.HotelDetailActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/hotelView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/hotelView"
                app:layout_constraintTop_toTopOf="@+id/hotelView"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="0dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="45dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView12"
                            app:srcCompat="@drawable/bg" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                            app:layout_constraintStart_toEndOf="@+id/imageView8"
                            app:layout_constraintTop_toTopOf="@+id/imageView8"
                            app:srcCompat="@drawable/bg1" />


                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                            app:layout_constraintStart_toEndOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="@+id/imageView9"
                            app:srcCompat="@drawable/bg2" />

                        <RatingBar
                            android:id="@+id/ratingBar_all"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:stepSize="0.1"
                            android:theme="@style/RatingBar"
                            app:layout_constraintBottom_toBottomOf="@+id/titleTv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/titleTv"
                            app:layout_constraintTop_toBottomOf="@+id/textView_averageAllRating"
                            app:layout_constraintTop_toTopOf="@+id/titleTv" />

                        <RatingBar
                            android:id="@+id/ratingBar_yours"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:numStars="5"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:theme="@style/RatingBar"
                            app:layout_constraintStart_toStartOf="@+id/textView2"
                            app:layout_constraintTop_toBottomOf="@+id/textView2" />

                        <TextView
                            android:id="@+id/textView_averageAllRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/titleTv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ratingBar_all"
                            app:layout_constraintTop_toBottomOf="@+id/hotelView"
                            app:layout_constraintTop_toTopOf="@+id/titleTv" />

                        <TextView
                            android:id="@+id/titleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Mughal Gardens, Srinagar"
                            android:textColor="@android:color/background_dark"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/hotelView" />

                        <TextView
                            android:id="@+id/dateLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Date :"
                            android:textColor="#044363"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/titleTv"
                            app:layout_constraintTop_toBottomOf="@+id/titleTv" />

                        <TextView
                            android:id="@+id/priceLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Price range : "
                            android:textColor="#044363"
                            app:layout_constraintStart_toStartOf="@+id/dateLabelTv"
                            app:layout_constraintTop_toBottomOf="@+id/dateLabelTv" />

                        <TextView
                            android:id="@+id/dateTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="18 April,  2020"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/dateLabelTv"
                            app:layout_constraintEnd_toEndOf="@+id/priceTv"
                            app:layout_constraintStart_toStartOf="@+id/priceTv"
                            app:layout_constraintTop_toTopOf="@+id/dateLabelTv" />

                        <TextView
                            android:id="@+id/priceTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/roboto"
                            android:text="3000 DA - 8000 DA"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/priceLabelTv"
                            app:layout_constraintStart_toEndOf="@+id/priceLabelTv"
                            app:layout_constraintTop_toTopOf="@+id/priceLabelTv" />

                        <TextView
                            android:id="@+id/categoryLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Category : "
                            android:textColor="#044363"
                            app:layout_constraintStart_toStartOf="@+id/priceLabelTv"
                            app:layout_constraintTop_toBottomOf="@+id/priceLabelTv" />

                        <TextView
                            android:id="@+id/categoryTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="     N/A"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/categoryLabelTv"
                            app:layout_constraintEnd_toEndOf="@+id/textLat"
                            app:layout_constraintStart_toStartOf="@+id/textLat"
                            app:layout_constraintTop_toTopOf="@+id/categoryLabelTv" />

                        <TextView
                            android:id="@+id/textLatTil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Distance : "
                            android:textColor="#044363"
                            app:layout_constraintStart_toStartOf="@+id/categoryLabelTv"
                            app:layout_constraintTop_toBottomOf="@+id/categoryLabelTv" />

                        <TextView
                            android:id="@+id/textLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="     N/A"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/textLatTil"
                            app:layout_constraintEnd_toEndOf="@+id/viewsLabelTv"
                            app:layout_constraintStart_toStartOf="@+id/viewsLabelTv"
                            app:layout_constraintTop_toTopOf="@+id/textLatTil" />

                        <TextView
                            android:id="@+id/viewsLabelTil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="views :"
                            android:textColor="#044363"
                            app:layout_constraintStart_toStartOf="@+id/textLatTil"
                            app:layout_constraintTop_toBottomOf="@+id/textLatTil" />

                        <TextView
                            android:id="@+id/viewsLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="     N/A"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/viewsLabelTil"
                            app:layout_constraintEnd_toEndOf="@+id/priceTv"
                            app:layout_constraintStart_toStartOf="@+id/priceTv"
                            app:layout_constraintTop_toBottomOf="@+id/textLatTil" />

                        <TextView
                            android:id="@+id/resavationLabelTil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="N°Resarvation :"
                            android:textColor="#044363"
                            app:layout_constraintStart_toStartOf="@+id/viewsLabelTil"
                            app:layout_constraintTop_toBottomOf="@+id/viewsLabelTv" />

                        <TextView
                            android:id="@+id/resavationLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="     N/A"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/resavationLabelTil"
                            app:layout_constraintEnd_toEndOf="@+id/viewsLabelTv"
                            app:layout_constraintStart_toStartOf="@+id/viewsLabelTv"
                            app:layout_constraintTop_toBottomOf="@+id/viewsLabelTil" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Photogellery "
                            android:textColor="@android:color/background_dark"
                            app:layout_constraintStart_toStartOf="@+id/resavationLabelTil"
                            app:layout_constraintTop_toBottomOf="@+id/resavationLabelTil" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:textSize="18sp"
                            android:text="About "
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@android:color/background_dark"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

                        <TextView
                            android:id="@+id/descriptionTv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:text="Mughal Gardens which have truly changed the face of the Mughal Empire is one of the most popular and the most visited tourist attractions of Srinagar."
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/textView13"
                            app:layout_constraintTop_toBottomOf="@+id/textView13" />

                        <TextView
                            android:id="@+id/textView"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="0dp"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Comment était votre expérience avec cet hôtel"
                            android:textColor="@android:color/background_dark"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/ratingBar_yours"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/map" />

                        <TextView
                            android:id="@+id/textView2"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Vos commentaires sont importants pour améliorer la qualité de vos services"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/ratingBar_yours"

                            app:layout_constraintStart_toStartOf="@+id/textView"
                            app:layout_constraintTop_toBottomOf="@+id/textView" />

                        <TextView
                            android:id="@+id/textView_yourCurrentRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/ratingBar_yours"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ratingBar_yours"
                            app:layout_constraintTop_toTopOf="@+id/ratingBar_yours" />


                        <TextView
                            android:id="@+id/Équipements"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Équipements de l'établissement"
                            android:textColor="@android:color/background_dark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/id" />

                        <TextView
                            android:id="@+id/Parkinggratuit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_baseline_local_parking_24"
                            android:fontFamily="@font/roboto"
                            android:text="Parking gratuit"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Équipements" />

                        <TextView
                            android:id="@+id/wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_baseline_wifi_24"
                            android:fontFamily="@font/roboto"
                            android:text="Internet haut débit gratuit (Wi-Fi)"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/Parkinggratuit"
                            app:layout_constraintTop_toBottomOf="@+id/Équipements" />

                        <TextView
                            android:id="@+id/Piscine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:drawableStart="@drawable/ic_baseline_pool_24"
                            android:fontFamily="@font/roboto"
                            android:text="Piscine"
                            android:textSize="12sp"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@+id/Parkinggratuit"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Parkinggratuit" />

                        <TextView
                            android:id="@+id/dejeuner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_baseline_free_breakfast_24"
                            android:fontFamily="@font/roboto"
                            android:text="Petit-déjeuner inclus"
                            android:textSize="12sp"
                            app:layout_constraintHorizontal_weight="1"

                            app:layout_constraintStart_toStartOf="@+id/wifi"
                            app:layout_constraintTop_toBottomOf="@+id/wifi" />

                        <TextView
                            android:id="@+id/Change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:drawableStart="@drawable/ic_baseline_euro_24"
                            android:fontFamily="@font/roboto"
                            android:text="Change des devises"
                            android:textSize="12sp"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@+id/dejeuner"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Piscine" />

                        <TextView
                            android:id="@+id/Restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_baseline_restaurant_24"
                            android:fontFamily="@font/roboto"
                            android:text="Restaurant"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/dejeuner"
                            app:layout_constraintTop_toBottomOf="@+id/dejeuner" />

                        <TextView
                            android:id="@+id/Équipementsdelachambre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Équipements de la chambre"
                            android:textColor="@android:color/background_dark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Restaurant" />

                        <TextView
                            android:id="@+id/Servicenchambre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_baseline_room_service_24"
                            android:fontFamily="@font/roboto"
                            android:text="Service en chambre"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Équipementsdelachambre" />

                        <TextView
                            android:id="@+id/typedec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Types de chambre"
                            android:textColor="@android:color/background_dark"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Servicenchambre" />

                        <TextView
                            android:id="@+id/chambresnonfumeurs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_baseline_smoke_free_24"
                            android:fontFamily="@font/roboto"
                            android:text="Chambres non fumeurs"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/typedec" />

                        <TextView
                            android:id="@+id/Suites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawableStart="@drawable/ic_baseline_airline_seat_individual_suite_24"
                            android:fontFamily="@font/roboto"
                            android:text="Suites"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/wifi"
                            app:layout_constraintTop_toBottomOf="@+id/typedec" />



                        <LinearLayout
                            android:id="@+id/reviewTit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@id/submitBtn"
                            android:background="@drawable/enter_review"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="@+id/textView_yourCurrentRating"
                            app:layout_constraintTop_toBottomOf="@+id/ratingBar_yours">

                            <EditText
                                android:id="@+id/reviewEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="12.5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="12.5dp"
                                android:background="@android:color/transparent"
                                android:hint="Add a review"
                                android:textCursorDrawable="@drawable/cursor"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/submitBtn"
                            android:layout_width="47dp"
                            android:layout_height="46dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/analyze_review"
                            android:src="@drawable/arrow"
                            app:layout_constraintBottom_toBottomOf="@+id/reviewTit"
                            app:layout_constraintEnd_toEndOf="@+id/textView"
                            app:layout_constraintTop_toTopOf="@+id/reviewTit" />

                        <TextView
                            android:id="@+id/seeAllReviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentRight="true"
                            android:clickable="true"
                            android:fontFamily="serif"
                            android:text="See all reviews"
                            android:textColor="@color/purple_500"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintEnd_toEndOf="@+id/submitBtn"
                            app:layout_constraintTop_toBottomOf="@+id/submitBtn" />




                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/descriptionTv" />

                        <TextView
                            android:id="@+id/report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Report"
                            android:textColor="@android:color/background_dark"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="@+id/textView13"
                            app:layout_constraintTop_toBottomOf="@+id/seeAllReviews" />
                        <LinearLayout
                            android:id="@+id/id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="@+id/submitBtn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/report">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/graph"
                                android:layout_width="match_parent"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="0dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/report"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="15dp"
                                android:elevation="0dp">

                                <RelativeLayout
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:id="@+id/heart"
                                        android:layout_width="50dp"
                                        android:layout_height="40dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="40dp"
                                        android:background="@drawable/image_heart" />

                                    <TextView
                                        android:id="@+id/text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/heart"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="serif"
                                        android:text=""
                                        android:textColor="#000000"
                                        android:textSize="40sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/text"
                                        android:layout_centerHorizontal="true"
                                        android:text="Positive Reviews"
                                        android:textSize="14sp" />

                                    <com.txusballesteros.widgets.FitChart
                                        android:id="@+id/fitChart"
                                        android:layout_width="150dp"
                                        android:layout_height="150dp"
                                        app:strokeSize="10dp"
                                        app:valueStrokeColor="#E41010" />

                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hotelView">

                <androidx.cardview.widget.CardView
                    android:id="@+id/posCard"
                    android:layout_width="78dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/posLinear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/positive"
                            android:layout_width="35dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="35dp"
                            android:layout_marginTop="7dp"
                            app:srcCompat="@drawable/positive" />

                        <TextView
                            android:id="@+id/posNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="N/A"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/posReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"

                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Positive Reviews"
                            android:textColor="#040404"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/posPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="N/A"
                            android:textColor="#4CAF50"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/negCard"
                    android:layout_width="78dp"
                    app:cardElevation="0dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                  >

                    <LinearLayout
                        android:id="@+id/negLinear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/negative"
                            android:layout_width="35dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="35dp"
                            android:layout_marginTop="7dp"
                            app:srcCompat="@drawable/neg" />

                        <TextView
                            android:id="@+id/negNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="N/A"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/negReviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Negative Reviews"
                            android:textColor="#000000"
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/negPercent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="N/A"
                            android:textColor="#F44336"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/lin"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/favoriteBtn"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/purple_500"
                android:drawableEnd="@drawable/ic_favorite_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
        <Button
            android:id="@+id/resarvtionBtn"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/book_button_bg"
            android:fontFamily="@font/rubik"
            android:text="Start Booking Your Trip"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/lin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lin"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
