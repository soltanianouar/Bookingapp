<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HotelDetailActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/hotelView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg" />

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/titleTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titleTv"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:srcCompat="@drawable/bg" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8"
                app:srcCompat="@drawable/bg1" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"
                app:srcCompat="@drawable/bg2" />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Mughal Gardens, Srinagar"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hotelView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/rubik"
                android:text="4.5"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/dateLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Date :"
                android:textColor="#044363"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/titleTv"
                app:layout_constraintTop_toBottomOf="@+id/titleTv" />

            <TextView
                android:id="@+id/priceLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Price range : "
                android:textColor="#044363"
                app:layout_constraintStart_toStartOf="@+id/dateLabelTv"
                app:layout_constraintTop_toBottomOf="@+id/dateLabelTv" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto"
                android:text="18 April,  2020"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/dateLabelTv"
                app:layout_constraintStart_toEndOf="@+id/dateLabelTv"
                app:layout_constraintTop_toTopOf="@+id/dateLabelTv" />

            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto"
                android:text="$3,00 - $8,00"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/priceLabelTv"
                app:layout_constraintStart_toEndOf="@+id/priceLabelTv"
                app:layout_constraintTop_toTopOf="@+id/priceLabelTv" />

            <TextView
                android:id="@+id/categoryLabelTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Category : "
                android:textColor="#044363"
                app:layout_constraintStart_toStartOf="@+id/priceLabelTv"
                app:layout_constraintTop_toBottomOf="@+id/priceLabelTv" />

            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="     N/A"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/categoryLabelTv"
                app:layout_constraintStart_toEndOf="@+id/categoryLabelTv"
                app:layout_constraintTop_toTopOf="@+id/categoryLabelTv" />
            <TextView
                android:id="@+id/textLatTil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Distance : "
                android:textColor="#044363"
                app:layout_constraintStart_toStartOf="@+id/categoryLabelTv"
                app:layout_constraintTop_toBottomOf="@+id/categoryLabelTv" />
            <TextView
                android:id="@+id/textLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="     N/A"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textLatTil"
                app:layout_constraintStart_toEndOf="@+id/textLatTil"
                app:layout_constraintTop_toTopOf="@+id/textLatTil" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="79dp"
                android:layout_height="18dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Photogellery"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="@+id/textLatTil"
                app:layout_constraintTop_toBottomOf="@+id/textLatTil" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="About "
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Mughal Gardens which have truly changed the face of the Mughal Empire is one of the most popular and the most visited tourist attractions of Srinagar."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/Équipements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Équipements de l'établissement"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTv" />
            <TextView
                android:id="@+id/Parkinggratuit"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableStart="@drawable/ic_baseline_local_parking_24"
                android:fontFamily="@font/roboto"
                android:text="Parking gratuit"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/Équipements"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_wifi_24"
                android:fontFamily="@font/roboto"
                android:text="Internet haut débit gratuit (Wi-Fi)"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Équipements"
                app:layout_constraintStart_toEndOf="@+id/Parkinggratuit" />
            <TextView
                android:id="@+id/Piscine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableStart="@drawable/ic_baseline_pool_24"
                android:fontFamily="@font/roboto"
                android:text="Piscine"
                android:textSize="12sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/Parkinggratuit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Parkinggratuit" />
            <TextView
                android:id="@+id/dejeuner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_free_breakfast_24"
                android:fontFamily="@font/roboto"
                android:text="Petit-déjeuner inclus"
                android:textSize="12sp"
                app:layout_constraintHorizontal_weight="1"

                app:layout_constraintStart_toStartOf="@+id/wifi"
                app:layout_constraintTop_toBottomOf="@+id/wifi" />
            <TextView
                android:id="@+id/Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:drawableStart="@drawable/ic_baseline_euro_24"
                android:fontFamily="@font/roboto"
                android:text="Change des devises"
                android:textSize="12sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/dejeuner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Piscine" />

            <TextView
                android:id="@+id/Restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_restaurant_24"
                android:fontFamily="@font/roboto"
                android:text="Restaurant"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/dejeuner"
                app:layout_constraintTop_toBottomOf="@+id/dejeuner" />
            <TextView
                android:id="@+id/Équipementsdelachambre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Équipements de la chambre"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Restaurant" />
            <TextView
                android:id="@+id/Servicenchambre"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:drawableStart="@drawable/ic_baseline_room_service_24"
                android:fontFamily="@font/roboto"
                android:text="Service en chambre"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/Équipementsdelachambre"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/typedec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Types de chambre"
                android:textColor="@android:color/background_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Servicenchambre" />
            <TextView
                android:id="@+id/chambresnonfumeurs"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_smoke_free_24"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/roboto"
                android:text="Chambres non fumeurs"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/typedec"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/Suites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_airline_seat_individual_suite_24"
                android:fontFamily="@font/roboto"
                android:text="Suites"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/wifi"
                app:layout_constraintTop_toBottomOf="@+id/typedec" />

            <Button
                android:id="@+id/favoriteBtn"
                android:layout_width="50dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/chambresnonfumeurs"
                android:drawableTop="@drawable/ic_favorite_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/resarvtionBtn"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/chambresnonfumeurs"
                android:background="@drawable/book_button_bg"
                android:fontFamily="@font/rubik"
                android:text="Start Booking Your Trip"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/favoriteBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/favoriteBtn"
                app:layout_constraintTop_toTopOf="@+id/favoriteBtn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
