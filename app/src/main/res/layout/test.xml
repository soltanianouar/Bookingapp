<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HotelDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbarR1"
        android:background="@drawable/shape_toolbar02"
        android:layout_height="?actionBarSize">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Hotel Details"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/toolbarR1"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/gray02"
                    android:id="@+id/hotelRl"
                    android:layout_marginEnd="5dp"
                    android:layout_width="100dp"
                    android:layout_height="140dp">
                    <ImageView
                        android:id="@+id/hotelView"
                        android:scaleType="centerCrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_toEndOf="@+id/hotelRl"
                    android:text="Title of hotel"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TableLayout
                    android:layout_below="@+id/titleTv"
                    android:layout_toEndOf="@+id/hotelRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableRow android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/categoryLabelTv"
                            android:layout_toEndOf="@+id/hotelRl"
                            android:layout_marginEnd="5dp"
                            android:text="Category"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/categoryTv"
                            android:layout_toEndOf="@+id/hotelRl"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:layout_weight="1"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </TableRow>
                    <TableRow android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/dateLabelTv"
                            android:layout_toEndOf="@+id/hotelRl"
                            android:layout_marginEnd="5dp"
                            android:text="Date"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/dateTv"
                            android:layout_toEndOf="@+id/hotelRl"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:layout_weight="1"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/priceLabelTv"
                            android:layout_toEndOf="@+id/hotelRl"
                            android:layout_marginEnd="5dp"
                            android:text="price"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/priceTv"
                            android:layout_toEndOf="@+id/hotelRl"
                            android:layout_marginEnd="5dp"
                            android:text="N/A"
                            android:layout_weight="1"
                            style="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </TableRow>

                </TableLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/descriptionTv"
                android:layout_marginTop="5dp"
                android:text="The description of the hotel"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/design_default_color_primary"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/resarvtionBtn"
            android:text="RÃ©server maintenant"
            android:drawableTop="@drawable/ic_baseline_add_24"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/favoriteBtn"
            android:text="Add Favorite"
            android:drawableTop="@drawable/ic_favorite_white"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>